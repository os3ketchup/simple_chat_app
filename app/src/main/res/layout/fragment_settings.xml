<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.SettingsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        style="@style/Widget.MaterialComponents.AppBarLayout.PrimarySurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.PrimarySurface"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            app:menu="@menu/menu_settings"
            app:navigationIcon="@drawable/ic_back">

            <TextView
                android:id="@+id/tv_logo_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Settings"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile"
            app:shapeAppearanceOverlay="@style/circular"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:importantForAccessibility="no"
            android:src="@drawable/user_add" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_32sdp"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e9ecef"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="123456"
                    android:background="#e9ecef"
                    android:ems="6"
                    android:fontFamily="@font/gothic_a1_medium"
                    android:gravity="center"
                    android:hint="@string/first_name"
                    android:inputType="text"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:textColor="#1b4332"
                    android:textColorHint="#ced4da"
                    android:textSize="@dimen/_24ssp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e9ecef"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="123456"
                    android:background="#e9ecef"
                    android:ems="6"
                    android:fontFamily="@font/gothic_a1_medium"
                    android:gravity="center"
                    android:hint="@string/last_name"
                    android:inputType="text"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:textColor="#1b4332"
                    android:textColorHint="#ced4da"
                    android:textSize="@dimen/_24ssp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--<androidx.cardview.widget.CardView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_32sdp"
            android:backgroundTint="#3a5a40"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="Confirm"
                android:textColor="#dad7cd"
                android:textSize="@dimen/_24ssp" />
        </androidx.cardview.widget.CardView>-->
    </LinearLayout>
</LinearLayout>